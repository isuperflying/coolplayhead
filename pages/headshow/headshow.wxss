/* pages/headshow/headshow.wxss */

page {
  width: 100%;
  height: 100%;
  background: #fdf9f1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

swiper {
  width: 100%;
  height: 600rpx;
}

swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.slide-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 10px;
  border: 4px solid #fff;
}

.bottom-view {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.down-view {
  width: 80%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #fe8081;
  color: #fff;
  border-radius: 10rpx;
}

.down-img {
  width: 36rpx;
  height: 36rpx;
}

.down-text{
  color: #fff;
  font-size: 36rpx;
  margin-left: 10rpx;
}

.collection-view {
  width: 80%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-top: 60rpx;
}

.item-view {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.item-view image{
  width: 112rpx;
  height: 112rpx;
}

.item-view text{
  font-size: 30rpx;
  color: #555;
  margin-top: 4rpx;
}
